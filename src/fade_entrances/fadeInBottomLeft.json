{
    "parameters": [
        "duration",
        "delay"
    ],
    "commands": [
        {
            "type": "AnimateItem",
            "duration": "${duration * 1}",
            "delay": "${delay || 0}",
            "value": [
                {
                    "property": "transform",
                    "from": [
                        {
                            "translateX": "-100%",
                            "translateY": "100%"
                        }
                    ],
                    "to": [
                        {
                            "translateX": "0",
                            "translateY": "0"
                        }
                    ]
                },
                {
                    "property": "opacity",
                    "from": "0",
                    "to": "1"
                }
            ]
        }
    ]
}
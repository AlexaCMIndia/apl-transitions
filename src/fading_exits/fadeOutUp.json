{
    "parameters": [
        "duration",
        "distance",
        "delay"
    ],
    "commands": [
        {
            "type": "AnimateItem",
            "duration": "${duration}",
            "delay": "${delay || 0}",
            "value": [
                {
                    "property": "opacity",
                    "from": 1,
                    "to": 0
                },
                {
                    "property": "transform",
                    "from": [
                        {
                            "translateY": "0"
                        }
                    ],
                    "to": [
                        {
                            "translateY": "${distance && ('-' + distance) || '-100%'}"
                        }
                    ]
                }
            ]
        }
    ]
}
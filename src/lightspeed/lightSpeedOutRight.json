{
    "parameters": [
        "duration",
        "delay"
    ],
    "commands": [
        {
            "type": "AnimateItem",
            "duration": "${duration * 1}",
            "delay": "${delay || 0}",
            "value": [
                {
                    "property": "transform",
                    "to": [
                        {
                            "translateX": "100%",
                            "translateY": "0"
                        },
                        {
                            "skewX": 30
                        }
                    ]
                },
                {
                    "property": "opacity",
                    "from": "1",
                    "to": "0"
                }
            ]
        }
    ]
}
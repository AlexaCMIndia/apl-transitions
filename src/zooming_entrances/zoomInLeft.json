{
    "parameters": [
        "duration",
        "distance",
        "delay"
    ],
    "commands": [
        {
            "type": "AnimateItem",
            "duration": "${duration * 0.6}",
            "delay": "${delay || 0}",
            "easing": "cubic-bezier(0.55, 0.055, 0.675, 0.19)",
            "value": [
                {
                    "property": "opacity",
                    "from": 0,
                    "to": 1
                },
                {
                    "property": "transform",
                    "from": [
                        {
                            "scaleX": 0.1,
                            "scaleY": 0.1
                        },
                        {
                            "translateX": "${distance && ('-' + distance) || '-100vw'}"
                        }
                    ],
                    "to": [
                        {
                            "scaleX": 0.475,
                            "scaleY": 0.475
                        },
                        {
                            "translateX": "10px"
                        }
                    ]
                }
            ]
        },
        {
            "type": "AnimateItem",
            "duration": "${duration * 0.4}",
            "easing": "cubic-bezier(0.175, 0.885, 0.32, 1)",
            "value": [
                {
                    "property": "transform",
                    "from": [
                        {
                            "scaleX": 0.475,
                            "scaleY": 0.475
                        },
                        {
                            "translateX": "10px"
                        }
                    ],
                    "to": [
                        {
                            "scaleX": 1,
                            "scaleY": 1
                        },
                        {
                            "translateX": "0"
                        }
                    ]
                }
            ]
        }
    ]
}